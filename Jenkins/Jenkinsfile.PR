@Library('jenkins-shared-library') _

pipeline {
    agent {
        docker {
            image 'python:3.9'
            args '-v /var/run/docker.sock:/var/run/docker.sock -u root'
        }
    }


    environment {
        DOCKER_REGISTRY = 'tomernos'
        GIT_CREDENTIALS_ID = 'gitpat'
        BACKEND_IMAGE = "${DOCKER_REGISTRY}/connecthub-backend"
        FRONTEND_IMAGE = "${DOCKER_REGISTRY}/connecthub-frontend"
        BRANCH = "${env.CHANGE_TARGET ?: env.BRANCH_NAME}"  // Target branch of PR
    }

    stages {
        stage('Validate PR Target') {
            steps {
                script {
                    def targetBranch = env.CHANGE_TARGET
                    
                    if (!(targetBranch ==~ /.*(develop|staging|main)$/)) {
                        echo "‚è≠Ô∏è Skipping: PR targets '${targetBranch}' (not develop/staging/main)"
                        currentBuild.result = 'NOT_BUILT'
                        error("PR must target develop, staging, or main branch")
                    }
                    
                    echo "‚úÖ PR targets ${targetBranch} - proceeding with validation"
                }
            }
        }
        stage('Check Merge Conflicts') {
            steps {
                script {
                    try {
                        sh """
                            git fetch origin ${env.CHANGE_TARGET}
                            git merge-tree \$(git merge-base HEAD origin/${env.CHANGE_TARGET}) HEAD origin/${env.CHANGE_TARGET} | grep -q '<<<<<' && exit 1 || exit 0
                        """
                        echo "‚úÖ No merge conflicts"
                    } catch (Exception e) {
                        error("‚ùå Merge conflicts detected with ${env.CHANGE_TARGET}")
                    }
                }
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Setup Dependencies') {
            steps {
                script {
                    logMessage('Installing Dependencies', 'üì¶')
                    
                    sh '''
                        pip install --upgrade pip
                        cd app
                        pip install pytest
                        pip install -r requirements.txt || echo "‚ö†Ô∏è No requirements.txt found"
                    '''
                    
                    echo "‚úÖ Dependencies installed"
                }
            }
        }

        stage('Python Tests') {
            steps {
                script {
                    sh 'cd app && python -m pytest tests/ -v'
                    sh 'cd app && python -m pytest tests/ -v --tb=short'
                }
            }
        }

        stage('Build Docker Images') {
            parallel {
                stage('Build Backend') {
                    steps {
                        script {
                            logMessage('Building Backend Image', 'üê≥')
                            dockerBuild(
                                imageName: BACKEND_IMAGE,
                                tag: "pr-${env.CHANGE_ID}",
                                context: '.',
                                dockerfile: 'Dockerfile'
                            )
                        }
                    }
                }
                stage('Build Frontend') {
                    steps {
                        script {
                            logMessage('Building Frontend Image', 'üé®')
                            dockerBuild(
                                imageName: FRONTEND_IMAGE,
                                tag: "pr-${env.CHANGE_ID}",
                                context: './frontend-service',
                                dockerfile: './frontend-service/Dockerfile'
                            )
                        }
                    }
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ All checks passed - ready to merge into ${env.CHANGE_TARGET}"
        }
        failure {
            echo "‚ùå Validation failed - check logs above"
        }
        always {
            echo "PR validation completed for #${env.CHANGE_ID}"
        }
    }
}